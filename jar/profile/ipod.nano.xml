<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<profile name="ipod.nano">
  <container>
    <scale>-10:240,harddup</scale>
    <ofps>30</ofps>
    <codec>
      <lavf>
        <format>ipod</format>
      </lavf>
    </codec>
  </container>
  <audio>
    <channels>2</channels>
    <srate>48000</srate>
    <codec>
      <faac>
        <mpeg>4</mpeg>
        <object>2</object>
        <br>128</br>
        <raw>yes</raw>
      </faac>
    </codec>
  </audio>
  <video>
    <codec>
      <x264>
        <cabac>no</cabac>
        <global_header>yes</global_header>
        <bitrate>448</bitrate>
        <level_idc>30</level_idc>
        <vbv_bufsize>2000</vbv_bufsize>
        <vbv_maxrate>960</vbv_maxrate>
        <frameref>2</frameref>
        <me>hex</me>
        <threads>auto</threads>
        <trellis>1</trellis>
      </x264>
    </codec>
  </video>
  <font>
    <subcp>cp936</subcp>
    <subfont>
      <name>微软雅黑</name>
      <file>C:\Windows\Fonts\msyh.ttf</file>
    </subfont>
  </font>
</profile>
