public class TextUtil {
    static public void setTextWithToolTip(JButton button, String text) {
        button.setText(text);
        button.setToolTipText(text);
    }

    static public void setTextWithToolTip(JLabel label, String text) {
        label.setText(text);
        label.setToolTipText(text);
    }

    static public void setTextWithToolTip(JButton button, String text, String toolTip) {
        button.setText(text);
        button.setToolTipText(toolTip);
    }
}
